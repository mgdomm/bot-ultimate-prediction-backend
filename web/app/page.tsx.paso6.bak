"use client";

import { useEffect, useState } from "react";

type Selection = {
  name: string;
  odds: number;
  probability: number;
};

type Bet = {
  id: number;
  title: string;
  sport: string;
  event: string;
  market: string;
  startTime: string;
  status: string;
  selections: Selection[];
};

export default function Home() {
  const [bets, setBets] = useState<Bet[]>([]);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    fetch("http://127.0.0.1:8000/bets/today")
      .then((res) => res.json())
      .then((data) => {
        setBets(data);
        setLoading(false);
      })
      .catch(() => {
        setLoading(false);
      });
  }, []);

  return (
    <main className="p-6 space-y-6">
      <h1 className="text-2xl font-semibold">Bot Ultimate Prediction</h1>

      {/* Resumen */}
      <section className="bg-[#111827] rounded-xl p-4">
        <h2 className="text-lg mb-4">Resumen</h2>
        <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div className="bg-[#0F172A] rounded-lg p-4">
            <div className="text-sm text-gray-400">Efectividad hoy</div>
            <div className="text-xl">—</div>
          </div>
          <div className="bg-[#0F172A] rounded-lg p-4">
            <div className="text-sm text-gray-400">Efectividad mes</div>
            <div className="text-xl">—</div>
          </div>
          <div className="bg-[#0F172A] rounded-lg p-4">
            <div className="text-sm text-gray-400">Efectividad total</div>
            <div className="text-xl">—</div>
          </div>
        </div>
      </section>

      {/* Apuestas */}
      <section className="bg-[#111827] rounded-xl p-4">
        <h2 className="text-lg mb-4">10 apuestas del día</h2>

        {loading && (
          <div className="text-gray-400">Cargando apuestas…</div>
        )}

        <ul className="space-y-6">
          {bets.map((bet) => (
            <li
              key={bet.id}
              className="bg-[#0F172A] rounded-xl p-5 space-y-3"
            >
              {/* Header */}
              <div className="flex justify-between items-center">
                <div>
                  <div className="text-sm text-blue-400">{bet.sport}</div>
                  <div className="font-semibold">{bet.title}</div>
                  <div className="text-sm text-gray-400">{bet.event}</div>
                </div>
                <div className="text-sm text-gray-400">
                  {new Date(bet.startTime).toLocaleTimeString()}
                </div>
              </div>

              {/* Market */}
              <div className="text-sm text-gray-300">
                Mercado: <span className="text-gray-400">{bet.market}</span>
              </div>

              {/* Selections */}
              <div className="grid grid-cols-1 md:grid-cols-2 gap-3">
                {bet.selections.map((sel, idx) => (
                  <div
                    key={idx}
                    className="border border-[#1F2933] rounded-lg p-3"
                  >
                    <div className="font-medium">{sel.name}</div>
                    <div className="text-sm text-gray-400">
                      Probabilidad: {Math.round(sel.probability * 100)}% · Cuota{" "}
                      {sel.odds}
                    </div>
                  </div>
                ))}
              </div>
            </li>
          ))}
        </ul>
      </section>
    </main>
  );
}
